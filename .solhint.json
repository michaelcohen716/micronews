{
  "extends": "solhint:default",
  "rules": {
    "prettier/prettier": "error",
    "avoid-throw": false,
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "operator-whitespace": 1,
    "mixedcase": 0,
    "no-experimental": 0,
    "lbrace": 0,
    "max-len": ["warning", 120],
    "indentation": ["error", 4],
    "quotes": ["error", "double"]
  },
  "plugins": ["prettier"]
}
